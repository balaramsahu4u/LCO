package genericLibrary;

import java.util.Scanner;

import org.openqa.selenium.UnexpectedAlertBehaviour;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.firefox.FirefoxProfile;
import org.openqa.selenium.firefox.internal.ProfilesIni;
import org.openqa.selenium.ie.InternetExplorerDriver;
import org.openqa.selenium.remote.CapabilityType;
import org.openqa.selenium.remote.DesiredCapabilities;
import org.openqa.selenium.safari.SafariDriver;
public class Driver {
		
	public static WebDriver d;
	public static WebDriver getDriver(){
		System.out.println("Pass the Browser \n"
				+ "1 for -> Intrnet Explorer \n"
				+ "2 for -> Safari Browser \n"
				+ "3 for -> Google Chrome \n"
				+ "4 for -> Mozilla Firefox \n");	
		@SuppressWarnings("resource")
		Scanner sc = new Scanner(System.in);
	    int i = sc.nextInt();
		//int i=4;
	     switch(i){
	     case 1:
	    	 System.setProperty("webdriver.ie.driver", "E:\\Software Tools\\IEDriverServer_Win32_2.45.0\\IEDriverServer.exe");
				d=new InternetExplorerDriver();
				System.out.println("Internet Explorer Browser launched successfully /n");
				break;
	     case 2:
	    	 d = new SafariDriver();
	    	 System.out.println("Safari Browser launched successfully");
	    	 break;
	     case 3:
	    	 System.setProperty("webdriver.chrome.driver", "C:\\Users\\Balaram\\Desktop\\EclipseProjects\\Needed Plugins\\chromedriver.exe");
	    	 d = new ChromeDriver();
	    	 System.out.println("Chrome Browser launched successfully");
	    	 break;
	     case 4:
	    	  System.gc();
	    	 System.setProperty("webdriver.gecko.driver", "C:\\Users\\Balaram\\Desktop\\EclipseProjects\\Needed Plugins\\geckodriver.exe");
	    	 d = new FirefoxDriver();
	    	 System.out.println("Firefox Browser launched successfully");
	    	 break;
	    default:
	    	System.setProperty("webdriver.gecko.driver", "C:\\Users\\Balaram\\Desktop\\EclipseProjects\\Needed Plugins\\geckodriver.exe");
	    	d = new FirefoxDriver();
	    	System.out.println("Default Firefox Browser launched successfully");
		}
		return d;
		}

}
